<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingHorizontal="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="Enable TOTP" />

    <FrameLayout
        android:id="@+id/secret_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_gravity="bottom"
            android:labelFor="@id/totp_secret"
            android:text="TOTP Secret" />
        <ImageView
            android:id="@+id/open_auth_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:padding="12dp"
            android:layout_gravity="end"
            android:contentDescription="Open Link"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/md_open_in_new_24px" />
        <ImageView
            android:id="@+id/copy_secret_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_gravity="end"
            android:contentDescription="Copy Secret"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/md_content_copy_24px" />
    </FrameLayout>
    <TextView
        android:id="@+id/totp_secret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:background="?attr/colorSurfaceContainerLow"
        android:inputType="textMultiLine"
        android:textColor="?attr/colorOutline"
        android:text="test" />

    <EditText
        android:id="@+id/totp_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:autofillHints=""
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="6"
        android:background="?attr/colorSurfaceContainerLow"
        android:hint="Code" />

</LinearLayout>
