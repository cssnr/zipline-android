        <!--    app:strokeWidth="2dp"-->
        <!--    app:icon="@drawable/md_encrypted_24px"-->
        <!--    app:iconTint="?attr/colorPrimary"-->
        <!--    app:iconGravity="end"-->
        <!--    app:iconPadding="12dp" />-->
        <Button
            android:id="@+id/enable_totp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Enable TOTP"
            android:backgroundTint="@android:color/holo_green_dark"
            app:icon="@drawable/md_encrypted_24px"
            app:iconGravity="end"
            app:iconPadding="12dp" />
        <Button
            android:id="@+id/disable_totp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Disable TOTP"
            android:backgroundTint="@android:color/holo_red_dark"
            android:visibility="gone"
            app:icon="@drawable/md_encrypted_24px"
            app:iconGravity="end"
            app:iconPadding="12dp"
            tools:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textSize="12sp"
            android:text="Avatar" />
        <Button
            android:id="@+id/update_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Refresh Avatar"
            app:icon="@drawable/md_refresh_24px"
            app:iconGravity="end"
            app:iconPadding="12dp" />
        <Button
            android:id="@+id/change_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Change Avatar"
            app:icon="@drawable/md_frame_person_24px"
            app:iconGravity="end"
            app:iconPadding="12dp" />
        <Button
            android:id="@+id/share_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Share Avatar"
            app:icon="@drawable/md_share_reviews_24px"
            app:iconGravity="end"
            app:iconPadding="12dp" />
        <Button
            android:id="@+id/remove_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Remove Avatar"
            android:backgroundTint="@android:color/holo_red_dark"
            app:icon="@drawable/md_hide_image_24px"
            app:iconGravity="end"
            app:iconPadding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textSize="12sp"
            android:text="Stats" />
        <Button
            android:id="@+id/update_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Refresh Stats"
            app:icon="@drawable/md_refresh_24px"
            app:iconGravity="end"
            app:iconPadding="12dp" />

        <LinearLayout
            android:id="@+id/server_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textSize="12sp"
                android:text="Server" />
            <Button
                android:id="@+id/gen_thumbnails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Thumbnails"
                app:icon="@drawable/md_videocam_24px"
                app:iconGravity="end"
                app:iconPadding="12dp"
                app:iconSize="18dp" />
            <Button
                android:id="@+id/clear_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Clear Temp"
                android:backgroundTint="@android:color/holo_orange_dark"
                app:icon="@drawable/md_delete_sweep_24px"
                app:iconGravity="end"
                app:iconPadding="12dp"
                app:iconSize="18dp" />
            <Button
                android:id="@+id/clear_zeros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Clear Zeros"
                android:backgroundTint="@android:color/holo_orange_dark"
                app:icon="@drawable/md_delete_sweep_24px"
                app:iconGravity="end"
                app:iconPadding="12dp"
                app:iconSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textSize="12sp"
            android:text="User" />
        <Button
            android:id="@+id/log_out_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Log Out"
            android:backgroundTint="@android:color/holo_red_dark"
            app:icon="@drawable/md_logout_24px"
            app:iconGravity="end"
            app:iconPadding="12dp" />
        <Button
            android:id="@+id/support_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Help Build Zipline"
            android:backgroundTint="@android:color/holo_green_dark"
            app:icon="@drawable/fa_github"
            app:iconGravity="end"
            app:iconPadding="12dp" />
