<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/header_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:paddingVertical="8dp"
        android:background="@drawable/header_item_ripple">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:contentDescription="Custom Header"
                android:src="@drawable/md_id_card_24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/header_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="middle"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Header Key" />
            <TextView
                android:id="@+id/header_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Header value here that is really long for no apparent reas except to be long" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/delete_button"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:contentDescription="Delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/md_delete_24px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
