<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="28dp"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/feedback_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="Send us Feedback" />

    <EditText
        android:id="@+id/feedback_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:autofillHints=""
        android:inputType="textMultiLine"
        android:minLines="5"
        android:maxLines="5"
        android:maxLength="800"
        android:gravity="top|start"
        android:background="?attr/colorSurfaceContainerLow"
        android:hint="Request Features, Report Issues, or Send General Feedback."
        tools:text="" />

    <TextView
        android:id="@+id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:drawablePadding="8dp"
        android:tag="More Info on GitHub"
        android:text="More Info on GitHub"
        app:drawableStartCompat="@drawable/fa_github" />

</LinearLayout>
